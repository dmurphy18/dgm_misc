## latest
rpmbuild -ba --define "_source_filedigest_algorithm md5" --define "_binary_filedigest_algorithm md5" --define "rhel 7" ./SPECS/salt-repo-latest.spec
rpmbuild -ba --define "_source_filedigest_algorithm md5" --define "_binary_filedigest_algorithm md5" --define "rhel 6" ./SPECS/salt-repo-latest.spec

## This should be run on a RH5 machine otherwise rpmlib errors
rpmbuild -ba --define "_source_filedigest_algorithm md5" --define "_binary_filedigest_algorithm md5" --define "rhel 5" ./SPECS/salt-repo-latest.spec


